include ../head
body
  include ../navbar
  .container
    .row
      include ../sidebar
      #content.col-sm-11
        .row
          .col-lg-7
            .box
              .box-header
                h2
                  i.fa.fa-edit
                  span.break
                  | Add data source
                .box-icon
                  a.btn-setting(href='form-wizard.html#')
                    i.fa.fa-wrench
                  a.btn-minimize(href='form-wizard.html#')
                    i.fa.fa-chevron-up
                  a.btn-close(href='form-wizard.html#')
                    i.fa.fa-times
              .box-content
                //
                  #MyWizard.wizard
                    ul.steps
                      li.active(data-target='#step1')
                        span.badge.badge-info 1
                      li(data-target='#step2')
                        span.badge 2
                      li(data-target='#step3')
                        span.badge 3
                      li(data-target='#step4')
                        span.badge 4
                      li(data-target='#step5')
                        span.badge 5
                    .actions
                      button.btn.btn-prev(type='button')
                        i.fa.fa-arrow-left
                        | Prev
                      button.btn.btn-success.btn-next(type='button', data-last='Finish')
                        | Next
                        i.fa.fa-arrow-right
                .step-content
                  #step1.step-pane.active
                    form#form-new-datasource.form-horizontal
                      fieldset.col-sm-12
                        .form-group
                          label.control-label(for='selectError20') Data type
                          .controls
                            select#selectError20.form-control(data-placeholder='Select the type of your data source', data-rel='chosen', ng-model="dbtype", name="type", ng-controller="dslist")
                              option(value='')
                              optgroup(label='Databases')
                                option(ng-repeat="ds in datasources", ng-cloak, value="{{ds.name}}") {{ds.name}}
                        fieldset.col-sm-12
                        div(ng-show="dbtype=='mysql' || dbtype=='mssql' || dbtype=='postgresql'", ng-cloak)
                          .form-group
                            label.control-label(for='input1') Data source name
                            .controls
                              input#input1.form-control(type='text', name="name")
                          .form-group
                            label.control-label(for='input1') Connection String
                            .controls
                              input#input1.form-control(type='text', name="_connectionString")
                          //
                            .form-group
                              label.control-label(for='input2') Port
                              .controls
                                input#input2.form-control(type='text', name="dbport")
                            .form-group
                              label.control-label(for='input3') DB Name
                              .controls
                                input#input3.form-control(type='text', name="dbname")
                            .form-group
                              label.control-label(for='input3') DB Username
                              .controls
                                input#input3.form-control(type='text', name="dbuser")
                            .form-group
                              label.control-label(for='input3') DB Password
                              .controls
                                input#input3.form-control(type='text', name="dbpass")
                        
                        div(ng-show="dbtype=='ga' || dbtype=='gwt'", ng-cloak)
                          .form-group
                            label.control-label(for='input1') Google Username
                            .controls
                              input#input1.form-control(type='text')
                          .form-group
                            label.control-label(for='input2') Google Password
                            .controls
                              input#input2.form-control(type='text')
                          .form-group
                            label.control-label(for='input3') UA
                            .controls
                              input#input3.form-control(type='text')
                        
                        div(ng-show="dbtype=='sf'", ng-cloak)
                          .form-group
                            label.control-label(for='input1') Salesforce Username
                            .controls
                              input#input1.form-control(type='text')
                          .form-group
                            label.control-label(for='input2') Salesforce Password
                            .controls
                              input#input2.form-control(type='text')
                          .form-group
                            label.control-label(for='input3') Account ID
                            .controls
                              input#input3.form-control(type='text')
                        
                        input#validate-new-datasource(type="submit", value="Validate")


                        
