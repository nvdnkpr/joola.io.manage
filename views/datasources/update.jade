          .col-md-5
            .box
              .box-header
                h2
                  i.fa.fa-plus
                  span.break
                  | Data Sources
                .box-icon
                  a.btn-close(href='ui-elements.html#')
                    i.fa.fa-times
              .box-content(ng-controller="dslist")
                table.table.table-bordered.table-striped
                  thead
                    tr(role="row")
                      th: strong Name
                      th: strong Type
                      th: strong Tables
                      th: strong Records
                      th: strong Status
                      th: strong Action
                  tbody
                    
                    tr(ng-repeat="ds in datasources", ng-cloak)
                      td {{ds.name}}
                      td {{ds.type}}
                      td {{ds.numTables || 0 }}
                      td {{ds.numRecords || 0 }}
                      td {{ds.status || 'UNKNOWN' }}
                      td: button.delete-data-source(ng-click="remove(ds)") Delete
          
